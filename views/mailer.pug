//- Add Contact (mailer) Page
extends layout

block content
  .container.page-form
    .toolbar
      a(href='/contacts').btn.btn-secondary Main Page
      a(href='/traffic/').btn.btn-info Traffic Insights
      a(href='/logout').btn.btn-secondary Logout

    form(action="/mailer" method="post")
      .card
        .card-header Add contact
        .card-body
          .form-group
            label.form-label Prefix
            .radio-group
              label
                input(type="radio" name="Prefix" value="Mr" checked)
                | Mr.
              label
                input(type="radio" name="Prefix" value="Mrs")
                | Mrs.
              label
                input(type="radio" name="Prefix" value="Ms")
                | Ms.
              label
                input(type="radio" name="Prefix" value="Dr")
                | Dr.

          .form-row
            .form-group
              label.form-label(for="Firstname") First name
              input.form-control#Firstname(type="text" name="Firstname" value="")
            .form-group
              label.form-label(for="Lastname") Last name
              input.form-control#Lastname(type="text" name="Lastname" value="")

          .form-group
            label.form-label(for="Street") Street
            input.form-control#Street(type="text" name="Street" value="")

          .form-row
            .form-group
              label.form-label(for="City") City
              input.form-control#City(type="text" name="City" value="")
            .form-group
              label.form-label(for="State") State
              select.form-control#State(name="State")
                option(value="" disabled selected) Select state
                option(value="AL") AL
                option(value="AK") AK
                option(value="AZ") AZ
                option(value="AR") AR
                option(value="CA") CA
                option(value="CO") CO
                option(value="CT") CT
                option(value="DE") DE
                option(value="DC") DC
                option(value="FL") FL
                option(value="GA") GA
                option(value="HI") HI
                option(value="ID") ID
                option(value="IL") IL
                option(value="IN") IN
                option(value="IA") IA
                option(value="KS") KS
                option(value="KY") KY
                option(value="LA") LA
                option(value="ME") ME
                option(value="MD") MD
                option(value="MA") MA
                option(value="MI") MI
                option(value="MN") MN
                option(value="MS") MS
                option(value="MO") MO
                option(value="MT") MT
                option(value="NE") NE
                option(value="NV") NV
                option(value="NH") NH
                option(value="NJ") NJ
                option(value="NM") NM
                option(value="NY") NY
                option(value="NC") NC
                option(value="ND") ND
                option(value="OH") OH
                option(value="OK") OK
                option(value="OR") OR
                option(value="PA") PA
                option(value="PR") PR
                option(value="RI") RI
                option(value="SC") SC
                option(value="SD") SD
                option(value="TN") TN
                option(value="TX") TX
                option(value="UT") UT
                option(value="VT") VT
                option(value="VA") VA
                option(value="WA") WA
                option(value="WV") WV
                option(value="WI") WI
                option(value="WY") WY
            .form-group
              label.form-label(for="Zip") Zip
              input.form-control#Zip(type="text" name="Zip" value="")

          .form-group
            label.form-label(for="Phone") Phone
            input.form-control#Phone(type="text" name="Phone" value="")

          .form-group
            label.form-label(for="Email") Email
            input.form-control#Email(type="text" name="Email" value="")

          .form-group
            label.form-label Contact by
            .checkbox-group
              label
                input(type="checkbox" name="checkphone")
                | Phone
              label
                input(type="checkbox" name="checkemail")
                | Email
              label
                input(type="checkbox" name="checkmail")
                | Mail
              label
                input(type="checkbox" name="checkall")
                | Any

          .form-group.form-actions
            button.btn.btn-primary(type="submit") Complete


